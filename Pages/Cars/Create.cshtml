@page
@model WebRentACar.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Color" class="control-label"></label>
                <input asp-for="Car.Color" class="form-control" />
                <span asp-validation-for="Car.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.PlateNumber" class="control-label"></label>
                <input asp-for="Car.PlateNumber" class="form-control" />
                <span asp-validation-for="Car.PlateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.DayPrice" class="control-label"></label>
                <input asp-for="Car.DayPrice" class="form-control" />
                <span asp-validation-for="Car.DayPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ProductionDate" class="control-label"></label>
                <input asp-for="Car.ProductionDate" class="form-control" />
                <span asp-validation-for="Car.ProductionDate" class="textdanger"></span>
            </div>

            <label asp-for="Car.ProducerID" class="control-label">Producer Name</label>
            <select asp-for="Car.ProducerID" class="form-control" asp-items="ViewBag.ProducerID">
            </select>
            <span asp-validation-for="Car.ProducerID" class="text-danger"></span>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
